<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Slingcessories.Mobile.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Slingcessories.Mobile.Maui.Pages"
    Title="Slingcessories"
    FlyoutBackgroundColor="#f8f9fa">

    <TabBar>
        <ShellContent
            Title="Accessories"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:AccessoriesPage}"
            Route="AccessoriesPage" />

        <ShellContent
            Title="Slingshots"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:SlingshotsPage}"
            Route="SlingshotsPage" />

        <ShellContent
            Title="Categories"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:CategoriesPage}"
            Route="CategoriesPage" />

        <ShellContent
            Title="Settings"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>
