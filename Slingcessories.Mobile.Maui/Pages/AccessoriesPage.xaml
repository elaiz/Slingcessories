<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Slingcessories.Mobile.Maui.ViewModels"
             x:Class="Slingcessories.Mobile.Maui.Pages.AccessoriesPage"
             x:DataType="viewmodels:AccessoriesViewModel"
             Title="Accessories">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0" 
                                Spacing="10" 
                                Padding="10">
            <Button Text="All" 
                    Command="{Binding LoadAccessoriesCommand}" 
                    CommandParameter="{x:Null}" />
            <Button Text="Wishlist" 
                    Command="{Binding LoadAccessoriesCommand}" 
                    CommandParameter="True" />
            <Button Text="Refresh" 
                    Command="{Binding LoadAccessoriesCommand}" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="1" 
                       ItemsSource="{Binding Accessories}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame BackgroundColor="White" 
                               HasShadow="True" 
                               Padding="15">
                            <Grid ColumnDefinitions="Auto,*">
                                <Image Source="{Binding PictureUrl}" 
                                       WidthRequest="80" 
                                       HeightRequest="80" 
                                       Aspect="AspectFill" 
                                       BackgroundColor="LightGray" />
                                <VerticalStackLayout Grid.Column="1" 
                                                     Spacing="5" 
                                                     Padding="10,0,0,0">
                                    <Label Text="{Binding Title}" 
                                           FontSize="18" 
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding CategoryName}" 
                                           FontSize="14" 
                                           TextColor="Gray" />
                                    <Label Text="{Binding Price, StringFormat='${0:F2}'}" 
                                           FontSize="16" 
                                           TextColor="Green" />
                                    <Label Text="{Binding Wishlist, StringFormat='Wishlist: {0}'}" 
                                           FontSize="12" 
                                           TextColor="Orange" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="1" 
                          IsRunning="{Binding IsLoading}" 
                          IsVisible="{Binding IsLoading}" 
                          VerticalOptions="Center" 
                          HorizontalOptions="Center" />

        <Label Grid.Row="1" 
               Text="{Binding ErrorMessage}" 
               IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}" 
               TextColor="Red" 
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               Margin="20" />
    </Grid>
</ContentPage>

