@page "/"
@using Slingcessories.Services
@inject UserStateService UserStateService
@inject UserService UserService
@inject NavigationManager Navigation
@inject OfflineDataService OfflineDataService
@implements IDisposable

<PageTitle>Home</PageTitle>

<h1>Slingcessories!</h1>

@if (!string.IsNullOrEmpty(loadError))
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @loadError
    </div>
}

@if (isLoading)
{
    <p>Loading...</p>
}
else if (users == null || !users.Any())
{
    <!-- No users exist - show registration prompt -->
    <div class="alert alert-info mt-4" role="alert">
        <h4 class="alert-heading">
            <i class="bi bi-info-circle"></i> Welcome to Slingcessories!
        </h4>
        <p>A place where you can keep track of your Slingshot stuff.</p>
        <hr />
        <p class="mb-3">
            <strong>To get started:</strong> Please register an account to begin managing your slingshots and accessories.
        </p>
        <button class="btn btn-primary" @onclick="GoToRegistration" disabled="@(!OfflineDataService.IsOnline)">
            <i class="bi bi-person-plus"></i> Register Now
        </button>
        @if (!OfflineDataService.IsOnline)
        {
            <p class="text-muted small mt-2">
                <i class="bi bi-wifi-off"></i> You need to be online to register.
            </p>
        }
    </div>
}
else if (string.IsNullOrEmpty(UserStateService.CurrentUserId))
{
    <!-- Users exist but none selected - show dropdown -->
    <div class="alert alert-info mt-4" role="alert">
        <h4 class="alert-heading">
            <i class="bi bi-info-circle"></i> Welcome Back!
        </h4>
        <p>Please select your user account to continue:</p>
        
        <div class="mb-3" style="max-width: 300px;">
            <select class="form-select" @onchange="OnUserSelected" value="@UserStateService.CurrentUserId">
                <option value="">Select User</option>
                @foreach (var user in users)
                {
                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                }
            </select>
        </div>
        
        <p class="mb-0">
            Or <button class="btn btn-link p-0 align-baseline" @onclick="GoToRegistration" disabled="@(!OfflineDataService.IsOnline)">register a new account</button>
        </p>
    </div>
}
else
{
    <!-- User is selected - show normal home content -->
    <p>A place where you can keep track of your Slingshot stuff</p>
    
    <div class="mt-4">
        <h3>Quick Navigation</h3>
        <div class="row g-3 mt-2">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-grid-3x3-gap"></i> Accessories
                        </h5>
                        <p class="card-text">Manage your slingshot accessories collection.</p>
                        <a href="/accessories/false" class="btn btn-primary">View Accessories</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-bullseye"></i> Slingshots
                        </h5>
                        <p class="card-text">Keep track of your slingshot models.</p>
                        <a href="/slingshots" class="btn btn-primary">View Slingshots</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-tags"></i> Categories
                        </h5>
                        <p class="card-text">Organize with custom categories.</p>
                        <a href="/categories" class="btn btn-primary">View Categories</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<UserDto>? users;
    private bool isLoading = true;
    private string? loadError;

    protected override async Task OnInitializedAsync()
    {
        UserStateService.OnUserChanged += HandleUserChanged;
        OfflineDataService.OnlineStatusChanged += HandleNetworkChange;
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        loadError = null;
        
        try
        {
            if (OfflineDataService.IsOnline)
            {
                // Try to fetch from API
                users = await UserService.GetAllUsersAsync();
                
                // Cache the users list
                await OfflineDataService.SetCachedDataAsync("users_list", users);
            }
            else
            {
                // Load from cache when offline
                users = await OfflineDataService.GetCachedDataAsync<List<UserDto>>("users_list");
                
                if (users == null || !users.Any())
                {
                    loadError = "You're offline and no cached users are available.";
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
            
            // Try to load from cache on error
            users = await OfflineDataService.GetCachedDataAsync<List<UserDto>>("users_list");
            
            if (users == null || !users.Any())
            {
                loadError = "Unable to load users. Please check your connection.";
            }
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnUserSelected(ChangeEventArgs e)
    {
        var userId = e.Value?.ToString();
        if (!string.IsNullOrEmpty(userId))
        {
            await UserStateService.SetCurrentUserAsync(userId);
        }
    }

    private void HandleUserChanged()
    {
        InvokeAsync(async () => await LoadUsers());
        StateHasChanged();
    }

    private void HandleNetworkChange(bool isOnline)
    {
        InvokeAsync(async () =>
        {
            if (isOnline)
            {
                // Reload fresh data when back online
                await LoadUsers();
            }
            StateHasChanged();
        });
    }

    private void GoToRegistration()
    {
        Navigation.NavigateTo("/register");
    }

    public void Dispose()
    {
        UserStateService.OnUserChanged -= HandleUserChanged;
        OfflineDataService.OnlineStatusChanged -= HandleNetworkChange;
    }
}
